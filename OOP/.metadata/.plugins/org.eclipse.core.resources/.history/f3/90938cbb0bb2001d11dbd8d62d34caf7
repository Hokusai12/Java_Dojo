
public class Driver extends Car {
	public void drive() {
		gas -= 1;
		System.out.println("Driving");
		if(gas == 0)
			gameOver();
		printGas();
	}
	
	public void boost() {
		gas -= 3;
		System.out.println("Boosted!!!!");
		if(gas <= 0)
			gameOver();
		printGas();
	}
	
	public void refuel() {
		gas += 2;
		System.out.println("Gassed up!");
		printGas();
	}
}

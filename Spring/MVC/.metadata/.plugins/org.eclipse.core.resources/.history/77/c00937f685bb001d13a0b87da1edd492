package com.ianhearne.burgertracker.controllers;

import javax.validation.Valid;

import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;

import com.ianhearne.burgertracker.models.Burger;

@Controller
public class BurgerController {
	@GetMapping("/")
	public String index(@ModelAttribute("burger") Burger burger) {
		return "index.jsp";
	}
	
	@PostMapping("/")
	public String createBurger(@Valid @ModelAttribute("burger") Burger burger, BindingResult result) {
		if(result.hasErrors()) {
			return "redirect:/";
		}
	}
}
